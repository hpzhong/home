<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myWheelView="http://schemas.android.com/apk/res/com.zhuoyou.plugin.running"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#b3b3b3" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >
	    <TextView
	        android:id="@+id/tv_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="22dip"
	        android:text="@string/it_is_ok"
	        android:textColor="#f1378a"
	        android:textSize="18sp" />        
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dip"
        android:background="#CCCCCC" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="230dip"
        android:orientation="horizontal" >

        <com.zhuoyou.plugin.view.WheelView
            android:id="@+id/wView_year"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <com.zhuoyou.plugin.view.WheelView
            android:id="@+id/wView_month"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
        
        <com.zhuoyou.plugin.view.WheelView
            android:id="@+id/wView_date"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>