<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#b35dc0" >

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp" >

            <ImageView
                android:id="@+id/back_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/actionbar_back" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back_m"
                android:layout_marginLeft="1dp"
                android:text="@string/add_picture"
                android:textColor="@color/white"
                android:textSize="21dp" />
        </RelativeLayout>
        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_marginRight="17dp"
            android:text="@string/ok"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_18"
            android:textStyle="normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/btn_add_bg"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:background="@drawable/content_bg" />
        <ImageView
            android:id="@+id/btn_add_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_pic"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <EditText
        android:id="@+id/ed_some_words"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:background="#00000000"
        android:hint="@string/pic_hint"
        android:maxLength="30"
        android:textColor="#292929" >
    </EditText>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rlayout_startDate"
            android:layout_width="match_parent"
            android:layout_height="45dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/start_date"
                android:textSize="18sp"
                android:textColor="#686868" />

            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
        		android:layout_marginRight="22dp"
                android:textColor="#b35dc0"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dadada" />
        
        <RelativeLayout
            android:id="@+id/rlayout_startTime"
            android:layout_width="match_parent"
            android:layout_height="45dp" >

            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/choose_time"
                android:textSize="18sp"
                android:textColor="#686868" />

            <TextView
                android:id="@+id/tv_chose_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
        		android:layout_marginRight="22dp"
                android:textColor="#b35dc0"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dadada" />

    </LinearLayout>
    
</LinearLayout>