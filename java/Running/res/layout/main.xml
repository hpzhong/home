<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fcfcfc"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
	    <FrameLayout
	        android:id="@+id/main_fragment"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" >
	    </FrameLayout>
	    <RelativeLayout
	        android:id="@+id/add_card_layout"
	        android:layout_width="match_parent"
	        android:layout_height="61dp"
	        android:layout_alignParentBottom="true"
	        android:layout_marginBottom="-71dp"
	        android:visibility="gone"
	        android:onClick="true" >
	        <ImageView
	            android:id="@+id/add_card_background" 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="#000000"
	            />
	        <LinearLayout
	            android:id="@+id/add_heartrate"
		        android:layout_width="match_parent"
		        android:layout_height="61dp"
		        android:background="@drawable/add_heartrate_selector"
		        android:layout_alignParentBottom="true"
		        android:onClick="true" >
		        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal"
			        android:gravity="center_vertical" >
		            <ImageView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/add_heartrate_icon"
		                android:layout_marginLeft="21dp" />
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/add_heartrate"
		                android:textColor="@color/white"
		                android:textSize="16sp"
		                android:layout_marginLeft="14dp" />
		        </LinearLayout>
	        </LinearLayout>
	        <LinearLayout
	            android:id="@+id/add_weight"
		        android:layout_width="match_parent"
		        android:layout_height="61dp"
		        android:background="@drawable/add_weight_selector"
		        android:layout_alignParentBottom="true"
		        android:onClick="true" >
		        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal"
			        android:gravity="center_vertical" >
		            <ImageView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/add_weight_icon"
		                android:layout_marginLeft="21dp" />
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/add_weight"
		                android:textColor="@color/white"
		                android:textSize="16sp"
		                android:layout_marginLeft="14dp" />
		        </LinearLayout>
	        </LinearLayout>
	        <LinearLayout
	            android:id="@+id/add_mood"
		        android:layout_width="match_parent"
		        android:layout_height="61dp"
		        android:background="@drawable/add_mood_selector"
		        android:layout_alignParentBottom="true"
		        android:onClick="true"
		        android:visibility="gone" >
		        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal"
			        android:gravity="center_vertical" >
		            <ImageView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/add_mood_icon"
		                android:layout_marginLeft="21dp" />
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/add_picture"
		                android:textColor="@color/white"
		                android:textSize="16sp"
		                android:layout_marginLeft="14dp" />
	            </LinearLayout>
	        </LinearLayout>
	        <LinearLayout
	            android:id="@+id/add_gps"
		        android:layout_width="match_parent"
		        android:layout_height="61dp"
		        android:background="@drawable/add_gps_selector"
		        android:layout_alignParentBottom="true"
		        android:onClick="true" >
		        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal"
			        android:gravity="center_vertical" >
		            <ImageView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/add_gps_icon"
		                android:layout_marginLeft="21dp" />
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/add_gps"
		                android:textColor="@color/white"
		                android:textSize="16sp"
		                android:layout_marginLeft="14dp" />
	            </LinearLayout>
	        </LinearLayout>
	        <LinearLayout
	            android:id="@+id/add_sport"
		        android:layout_width="match_parent"
		        android:layout_height="61dp"
		        android:background="@drawable/add_sport_selector"
		        android:layout_alignParentBottom="true"
		        android:onClick="true" >
		        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal"
			        android:gravity="center_vertical" >
		            <ImageView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/add_sport_icon"
		                android:layout_marginLeft="21dp" />
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/add_sport"
		                android:textColor="@color/white"
		                android:textSize="16sp"
		                android:layout_marginLeft="14dp" />
	            </LinearLayout>
	        </LinearLayout>
	    </RelativeLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/foot_id"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bottom_bar_height" >

        <include layout="@layout/bottom_view" />
        
	    <RelativeLayout
	        android:id="@+id/add_layout"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_centerHorizontal="true"
	        android:onClick="onClick" >
	
	        <ImageView
	            android:id="@+id/add_image_bg"
	            android:layout_width="44dp"
	            android:layout_height="44dp"
	            android:src="@drawable/add_option_bg"
	            android:scaleType="centerInside"
	            android:layout_centerInParent="true" />
	        <ImageView
	            android:id="@+id/add_image_circle"
	            android:layout_width="44dp"
	            android:layout_height="44dp"
	            android:src="@drawable/add_option_circle"
	            android:scaleType="centerInside"
	            android:layout_centerInParent="true"
	            android:visibility="gone" />
	        <ImageView
	            android:id="@+id/add_image"
	            android:layout_width="44dp"
	            android:layout_height="44dp"
	            android:src="@drawable/add_option"
	            android:scaleType="centerInside"
	            android:layout_centerInParent="true" />
	    </RelativeLayout>
        
    </RelativeLayout>        
</LinearLayout>