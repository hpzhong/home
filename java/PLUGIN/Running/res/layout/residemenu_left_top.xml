<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
	<LinearLayout
	    android:id="@+id/user_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingLeft="25dip"
	    android:paddingTop="25dip"
	    android:paddingBottom="25dip"
	    android:orientation="horizontal" >
	
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/logo_bg"
	        android:gravity="center" >
			<ImageView 
	            android:id="@+id/drawer_top_face"
	            android:layout_width="70dip"
	            android:layout_height="70dip"
	            android:background="@drawable/logo_default" />
		</LinearLayout>
	    <FrameLayout
			android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_marginLeft="10dp" >
	        <LinearLayout
	            android:id="@+id/logged_on"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:visibility="gone" >
	            <TextView
	                android:id="@+id/usrname"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
	                android:hint="用户名"
	                android:textSize="18sp"
	                android:textColor="#ffffff" />
	            <TextView
                    android:id="@+id/signature"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="主人很懒，没有留下签名"
                    android:textColor="#99a0a7"
                    android:textSize="14sp" />		            			            
	        </LinearLayout>
	        <Button
	            android:id="@+id/log_in"
	            android:layout_width="70dp"
	            android:layout_height="35dp"
	            android:background="@drawable/botton_selector"
	            android:text="@string/getIntoLogin"
	            android:textColor="@color/white"
	            android:textSize="14sp" />

	    </FrameLayout>	
	</LinearLayout>
	<ImageView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="30dp"
	    android:layout_below="@+id/user_layout"
	    android:background="@drawable/residemenu_drive" />
</RelativeLayout>