<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f2f2f2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp" >

        <ImageView
            android:id="@+id/test_personal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/test_center_2" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/bmi_ex"
                android:textSize="16sp"
                android:textColor="#6d6d6d" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/bmi_explain"
                android:textSize="16sp"
                android:textColor="#6d6d6d" />

            <TextView
                android:id="@+id/bmi_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/magin_10"
                android:gravity="center"
                android:text="20"
                android:textSize="@dimen/text_30"
                android:textColor="#353535" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/figure"
                android:textSize="16sp"
                android:textColor="#6d6d6d" />

            <TextView
                android:id="@+id/bmi_state"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/magin_10"
                android:gravity="center"
                android:text="标准"
                android:textSize="@dimen/text_30" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="17"
            android:textSize="16sp"
            android:textColor="#6d6d6d" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="19"
            android:textSize="16sp"
            android:textColor="#6d6d6d" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="23"
            android:textSize="16sp"
            android:textColor="#6d6d6d" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="25"
            android:textSize="16sp"
            android:textColor="#6d6d6d" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="28"
            android:textSize="16sp"
            android:textColor="#6d6d6d" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:orientation="horizontal" >
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#c2f458" />
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#48db64" />
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#3ea3e0" />
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#5f53fb" />
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#f755cd" />
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#ff9254" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#ffffffff"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/state1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/test1" />
        <ImageView
            android:id="@+id/state2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/test2" />
        <ImageView
            android:id="@+id/state3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/test3" />
        <ImageView
            android:id="@+id/state4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/test4" />
        <ImageView
            android:id="@+id/state5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/test5" />
        <ImageView
            android:id="@+id/state6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/test6" />
    </LinearLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#9f9f9f" />
    
    <RelativeLayout
        android:id="@+id/btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="36.0dip"
        android:layout_marginTop="30dp" >

        <Button
            android:id="@+id/tBack"
            android:layout_width="80.0dip"
            android:layout_height="36.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30.0dip"
            android:background="@drawable/btn_dark_sel"
            android:clickable="true"
            android:onClick="onClick"
            android:text="@string/pre"
            android:textColor="@android:color/white"
            android:textSize="20.0sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/tDone"
            android:layout_width="80.0dip"
            android:layout_height="36.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30.0dip"
            android:background="@drawable/botton_selector"
            android:clickable="true"
            android:onClick="onClick"
            android:text="@string/done"
            android:textColor="@android:color/white"
            android:textSize="20.0sp"
            android:textStyle="normal" />
    </RelativeLayout>

</LinearLayout>