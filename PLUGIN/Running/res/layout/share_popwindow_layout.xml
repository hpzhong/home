<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/share_text"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#FFFFFFFF"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:background="#AAC0CB" />

    <EditText
        android:id="@+id/share_edit"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:hint="@string/share_input"
        android:inputType="text"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/edit_bg"
        android:gravity="top" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:background="#AAC0CB" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip" >

        <ImageView
            android:id="@+id/share_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share_wb" />

        <TextView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="@string/action_menu_share"
            android:textColor="#FF7E00"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>