<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:layout_width="@dimen/divider_with"
        android:layout_height="match_parent"
        android:background="@color/graphic_info_left" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/gap_h_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="1px" >

            <RelativeLayout
                android:id="@+id/bottom_left"
                android:layout_width="80dip"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_width="2.0dip"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/day_timeline_vertical_line"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/relativelayout_card"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15.0dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/item_run_logo"
                    android:layout_marginTop="@dimen/magin_5"
                    android:layout_marginBottom="@dimen/magin_5"
                    android:layout_width="48.0dip"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:scaleType="center"
                    android:src="@drawable/icon_graphic" >
                </ImageView>

                <ImageView
                    android:id="@+id/picture"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:focusable="true"
                    android:layout_weight="1"
                    android:contentDescription="@string/app_name"
                    android:scaleType="center"
                    android:src="@drawable/picture_loading" >
                </ImageView>

                <TextView
                    android:id="@+id/graphic_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/magin_5"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/graphic_info_left"
                    android:textSize="@dimen/text_15" />
            </LinearLayout>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:text="18:59 - 20:49"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/text_15" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>