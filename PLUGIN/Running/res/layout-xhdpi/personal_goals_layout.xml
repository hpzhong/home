<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e0eaef"
    android:orientation="vertical" >

    <include
        android:id="@+id/running_title"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        layout="@layout/running_actionbar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/general" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dip"
                android:text="@string/set_exercise"
                android:textColor="#808080"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/goals1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/goals_normal"
                    android:gravity="center"
                    android:text="@string/general"
                    android:textColor="#B9B9B9"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/goals2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/goals_normal"
                    android:gravity="center"
                    android:text="@string/activists"
                    android:textColor="#B9B9B9"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/goals3"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/goals_normal"
                    android:gravity="center"
                    android:text="@string/madman"
                    android:textColor="#B9B9B9"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/edit_bg"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawableLeft="@drawable/calories"
                    android:gravity="center_vertical"
                    android:text="@string/step_spe"
                    android:textColor="#B9B9B9"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:background="@drawable/edit_delimiter" />

                <EditText
                    android:id="@+id/steps"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="5"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="#75B2DB" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:background="@drawable/edit_bg"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawableLeft="@drawable/calories"
                    android:gravity="center_vertical"
                    android:text="@string/calories_spe"
                    android:textColor="#B9B9B9"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:background="@drawable/edit_delimiter" />

                <EditText
                    android:id="@+id/cal"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="5"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textColor="#75B2DB" />
            </LinearLayout>

            <Button
                android:id="@+id/save"
                android:layout_width="200dip"
                android:layout_height="45dip"
                android:layout_gravity="center"
                android:layout_marginTop="5dip"
                android:background="@drawable/botton_selector"
                android:text="@string/save"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/btn_layout"
                android:layout_width="fill_parent"
                android:layout_height="36.0dip"
                android:layout_marginTop="5dip"
                android:visibility="gone" >

                <Button
                    android:id="@+id/btn_pre"
                    android:layout_width="80.0dip"
                    android:layout_height="36.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30.0dip"
                    android:background="@drawable/btn_dark_sel"
                    android:text="@string/pre"
                    android:textColor="@android:color/white"
                    android:textSize="20.0sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btn_done"
                    android:layout_width="80.0dip"
                    android:layout_height="36.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30.0dip"
                    android:background="@drawable/botton_selector"
                    android:text="@string/done"
                    android:textColor="@android:color/white"
                    android:textSize="20.0sp"
                    android:textStyle="normal" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>