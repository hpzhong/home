<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f3f3"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:background="#f4f3f3" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="@string/discover_small_title"
            android:textSize="15dp"
            android:textColor="#5e5b5a" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/facility_qume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/discover_qume"
            android:onClick="onClick" >

            <TextView
                android:id="@+id/facility_one_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/discover_qume"
                android:textColor="@color/discover_title_color"
                android:textSize="@dimen/text_20" />

            <TextView
                android:id="@+id/facility_one_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/facility_one_text"
                android:layout_marginLeft="15dp"
                android:textColor="#868483"
                android:textSize="12sp"
                android:text="@string/discover_qume_text" />
			
        </RelativeLayout>
		<ImageView 
			    android:layout_width="1dp"
			    android:layout_height="match_parent"
			    android:background="#e5e5e5"
			    />
        <RelativeLayout
            android:id="@+id/facility_eamey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/discover_eamey"
            android:clickable="true"
            android:onClick="onClick" >
            <TextView
                android:id="@+id/facility_two_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/discover_eamey"
                android:textColor="@color/discover_title_color"
                android:textSize="@dimen/text_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/facility_two_text"
                android:layout_marginLeft="15dp"
                android:textColor="#868483"
                android:textSize="12sp"
                android:text="@string/discover_eamey_text" />
        </RelativeLayout>
    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/facility_watch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/discover_watch"
            android:onClick="onClick" >

            <TextView
                android:id="@+id/facility_watch_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/discover_watch"
                android:textColor="@color/discover_title_color"
                android:textSize="@dimen/text_20" />

            <TextView
                android:id="@+id/facility_watch_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/facility_watch_text"
                android:layout_marginLeft="15dp"
                android:textColor="#868483"
                android:textSize="12sp"
                android:text="@string/discover_watch_text" />
			<ImageView 
			    android:layout_width="1dp"
			    android:layout_height="match_parent"
			    android:background="#e5e5e5"
			    />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/facility_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/discover_more"
            android:clickable="true"
            android:onClick="onClick" >
			
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/discover_more_text"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:textSize="15dp"
                android:textColor="@color/discover_title_color"
                />
            
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>