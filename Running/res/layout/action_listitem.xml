<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/listitem"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<ImageView android:id="@+id/action_preview"
	    android:layout_width="fill_parent"
	    android:layout_height="170dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="15dp"
	    android:layout_alignParentTop="true"
	    android:scaleType="fitXY"
		android:contentDescription="@string/app_name"/>    

	<View android:id="@+id/fill_view"
	    android:layout_width="fill_parent"
	    android:layout_height="20dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/action_fillview_bg"/>	
	
	<TextView android:id="@+id/action_state"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="23dp"
	    android:layout_marginLeft="5dp"
	    android:textSize="18sp"
	    android:textColor="@color/white"
	    android:paddingTop="1dp"
	    android:paddingLeft="4dp"/>
    
	<TextView android:id="@+id/action_num"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@id/action_preview"
	    android:layout_marginLeft="20dp"
	    android:textColor="@color/white"
	    android:layout_alignParentLeft="true"/>
	
	<TextView android:id="@+id/action_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@id/action_preview"
	    android:layout_alignParentRight="true"
	    android:textColor="@color/white"
	    android:layout_marginRight="20dp"/>
	
	
	<View android:id="@+id/is_join"
	    android:layout_width="80dp"
	    android:layout_height="wrap_content"
	    android:layout_marginRight="10dp"
	    android:background="@drawable/action_join"
	    android:visibility="gone"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"/>
		
</RelativeLayout>
